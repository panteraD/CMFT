<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'>

    <ui:style>
        .container {
            height: auto;
            width: 50%;
            align-items: center;
        }

    </ui:style>




    <gwt:HTMLPanel>

        <!--<form name="register_form" action="/auth/saving/add" method="post">-->
        <!--<i:IronForm ui:field="registrationForm">-->
            <!--<form is="iron-from" ui:field="registrationForm" action="/auth/saving/add" method="post">-->
            <p:PaperInput label="First Name" ui:field="firstName" name="name"
                          allowedPattern="[a-zA-Z]*" autoValidate="true"
                          errorMessage="use letters" required="true">
            </p:PaperInput>
            <p:PaperInput label="Last Name" ui:field="surName" name="surname"
                          pattern="[a-zA-Z]*" autoValidate="true"
                          errorMessage="use letters" required="true">
            </p:PaperInput>
            <p:PaperInput label="Login" ui:field="login" name="login"></p:PaperInput>
            <p:PaperInput label="Email" ui:field="email" name="eMail" pattern=""></p:PaperInput>

            <p:PaperInput label="Password" ui:field="password" type="password" name="password"></p:PaperInput>
            <p:PaperInput label="Address" ui:field="address" name="address"></p:PaperInput>
            <p:PaperInput label="date of birth" ui:field="birthday" name="birthday"></p:PaperInput>
            <p:PaperInput label="path to your picture" ui:field="path" name="path"></p:PaperInput>

            <p:PaperButton ui:field="submitButton" attributes="dialog-confirm" raised="true">submit</p:PaperButton>
        <!--</i:IronForm>-->
 


    </gwt:HTMLPanel>
</ui:UiBinder>